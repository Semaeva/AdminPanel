<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='utf-8' />
    <link href='~/lib/main.css' rel='stylesheet' />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var list_date = []
            var list_event = []
            var list_ids = []

            const list_full_date = $('.full_date');
            const list_name_events = $('.name_event');
            const list_event_ids = $('.ids');

            function GetMainData(list_to_push, list_from) {
                for (var i = 0; i < list_from.length; i++) {
                    list_to_push.push(list_from[i].innerText);
                }
                return list_to_push;
            }

            var list1 = GetMainData(list_date, list_full_date);
            var list2 = GetMainData(list_event, list_name_events);
            var list3 = GetMainData(list_ids, list_event_ids);

            var dict = list2.map((title, i, id) => ({ title, start: list1[i], id: list3[i] }));
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {

                initialView: 'dayGridMonth',
                selectable: true,

                events: dict,
                eventColor: '#378006',
                eventClick: function (info) {
                    console.log(info.event.title);
                    RemoveEvent(info.event.id, info.event.title);
                    //RemoveEvent(info.event.id,  info.event.title);      
                },
                dateClick: function (info) {
                    SetTitle(info);    
                },

            });

            calendar.render();

            function SetTitle(info){
                var dateEvents = $("#dateEvent").val(info.dateStr);
                var nameEvents = $("#nameEvent").val();
                var myModal = new bootstrap.Modal(document.getElementById("myModal"));
                myModal.show();

                const createEvent = document.getElementById('createEvent');
                var inputDate = document.createElement("input");
                inputDate.type = "text";
                //inputDate.name = info.dateStr;
                inputDate.name = 'dateEvent';
                inputDate.value = info.dateStr;

                var input = document.createElement("input");
                input.type = "text";
                input.name = "nameEvent";
                createEvent.appendChild(input)
                createEvent.appendChild(inputDate)
            }

            function RemoveEvent(id, title){
                var myModal = new bootstrap.Modal(document.getElementById("removeModal"));
                myModal.show();

                const removeEvent = document.getElementById('removeEvent');
                var input = document.createElement('input');
                input.type = 'text';
                input.value = title;

                var hiddenId = document.createElement('input');
                hiddenId.name = 'id';
                hiddenId.type = 'text';
                hiddenId.value= id;
                hiddenId.hidden = true;

                removeEvent.appendChild(input);
                removeEvent.appendChild(hiddenId);

            }

            function getMainData(list_to_push, list_from) {
                for (var i = 0; i < list_from.length; i++) {
                    list_to_push.push(list_from[i].innerText);
                }
                return list_to_push;
            }
        }); 


 


    

    </script>
</head>
<body>
    <div id='calendar'></div>


    <div class="modal fade" id="myModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="myModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-action="Create" asp-controller="Calendar">
                    <div class="modal-body">
                       <div id="createEvent"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="modal fade" id="removeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="removeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="removeModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                @using (Html.BeginForm("Delete", "Calendar", FormMethod.Post))
                {
                    <div class="modal-body">
                        <div id="removeEvent"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Удалить</button>
                    </div>
                }
            </div>
        </div>
    </div>


   


    <div>
        @foreach (var item in Model)
        {
            @foreach (var i in item.Events)
            {
                <p class="days" hidden>@i.Day</p>
                <p class="ids" hidden>@i.Id</p>
                <p class="full_date" hidden>@i.FullDate</p>
                <p class="name_event" hidden>@i.Name</p>
            }
        }
    </div>

    <script src='~/lib/main.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    </body>
    </html>